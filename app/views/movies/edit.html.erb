<h2>Movie Detail</h2>
<p>Movie Title: <%= @movie.name %></p>
<p>Year Released: <%= @movie.year %></p>

<% if @movie.errors.any? %>
  <ul>
    <%= @movie.errors.full_messages.each do |message| %>
      <li><% message %></li>
    <% end %>
  </ul>
<% end %>

<h4>Update Movie Details</h4>

<form action="/movies/<%= @movie.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="movies_name">Movie Name</label>
  <input id="movies_name" name="movie[name]" type="text" value="<%= @movie.name %>">
  <label for="movies_year">Year Released</label>
  <input id="movies_year" name="movie[year]" type="text" value="<%= @movie.year %>">
  <button>Update</button>
</form>
